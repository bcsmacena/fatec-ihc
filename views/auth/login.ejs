<%- include('../partials/head.ejs') %>
<body>
  <header>
    <nav class="navbar sticky-top navbar-light bg-light">
        <a class="navbar-brand" href="#">Trabalho Intermitente</a>        
    </nav>
  </header>

    <main class='container mt-5 d-flex justify-content-center'>
      <form action="/login" method="POST" class='col-sm-12 col-md-6 col-lg-6'>
        <div class="form-group">
            <div class='col-sm-12 p-1 bg-danger text-light text-center d-none' id='mensagem' >***Preencha todos os campos***</div>
            <% if( typeof msg !== 'undefined') {%>
              <div class='col-sm-12 p-1 bg-danger text-light text-center'><%= msg %></div>
              <% } %>
        </div> 
        
        <div class="form-group">
          <label for="email">Login</label>
          <input type="email" class="form-control" name="email" id="email" aria-describedby="email" placeholder="">
        </div>
        <div class="form-group">
          <label for="senha">Senha</label>
          <input type="password" class="form-control" name="senha" id="senha" placeholder="" required>
        </div>
        <div class="form-group d-flex justify-content-around align-items-center mb-5">
          <!-- <label for="form-check" class="m-0">Perfil:</label> -->
          <div class="form-check form-check-inline " aria-required="true">
            <input class="form-check-input" type="radio" name="radioLogin" id="radioColaborador" value="radioColaborador" checked>
            <label class="form-check-label" for="radioColaborador">Colaborador</label>
          </div>
          <div class="form-check form-check-inline ">
            <input class="form-check-input" type="radio" name="radioLogin" id="radioEmpresa" value="radioEmpresa">
            <label class="form-check-label" for="radioEmpresa">Empresa</label>
          </div>
        </div>
        <!-- <div class="form-group form-check">
          <input type="checkbox" class="form-check-input" id="lembraSenha">
          <label class="form-check-label" for="lembrarSenha">Lembrar-se</label>
        </div> -->
        <div class="form-group ">
            <button type="submit" id="btn-entrar" class="btn btn-success col-12">Entrar</button>
        </div>
        <div class="form-group">
            <a class="btn btn-info col-12" href="/cadastro" role="button">Cadastre-se</a>
        </div>
      </form>
    </main>

    <%- include('../partials/jsBootstrap.ejs') %>
    <script src='/javascripts/login.js'></script>
</body>
</html>