<%- include('../partials/head.ejs') %>
<script src="/javascripts/jquery-3.2.0.min.js"></script>
<script src="/javascripts/jquery.mask.min.js"></script>
<body>
    <header>
        <nav class="navbar sticky-top navbar-light bg-light">
            <a class="navbar-brand" href="#">Trabalho Intermitente</a>
            <a class="navbar-brand" href="/empresa"><i class="fa fa-undo"></i></a>  
        </nav>
    </header>
    <main class='container mt-5 col-lg-6'>
        <div class='row'>
            <div class='ml-3'>
                <h2>Cadastro Contrato</h2>
            </div>
        </div>

        <!-- 
            COLABORADORES: Nome, MEI, CPF, área de atuação, telefone, e-mail, número de contratos, 
            histórico de convocação, local do serviço; 
        --> 

        <form class='col-sm-12' action="/cadastro/colaborador" method="POST">
            <div class="form-group">
                <div class='col-sm-12 p-1 bg-danger text-light text-center d-none' id='mensagem' >***Preencha todos os campos***</div>
            </div> 
            <div class="form-group">
                <label for="cpf">CPF:</label>
                <input type="text" class="form-control" name="cpf" id="cpf" aria-describedby="cpf" placeholder="000.000.000-00">
            </div>
            <div class="form-group">
              <label for="nome">Nome:</label>
              <input type="nome" class="form-control" name="nome" id="nome" aria-describedby="nome" placeholder="" readonly>
            </div>
            <div class="form-group">
                <label for="telefone">Telefone</label>
                <input type="text" class="form-control" name="telefone" id="telefone" aria-describedby="telefone" placeholder="(00) 00000-0000" readonly>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" name="email" id="email" aria-describedby="email" placeholder="" readonly>
            </div>
            <div class="form-group">
                <label for="funcao">Função</label>
                <select class="form-control" id="funcao" name="funcao">
                  <option>Selecione...</option>
                  <option>Pintor</option>
                  <option>Carpinteiro</option>
                  <option>Eletricista</option>
                  <option>Marceneiro</option>
                  <option>Vidraceiro</option>
                  <option>Pedreiro</option>
                </select>
              </div>
            <div class="form-group">
                <div class="row">
                    <div class="col">
                        <label for="jornada">Início Jornada</label>
                        <input type="time" class="form-control" name="inicioJornada" id="inicioJornada" aria-describedby="inicioJornada" placeholder="08:00">
                    </div>
                    <div class="col">
                        <label for="jornada">Término Jornada</label>
                        <input type="time" class="form-control" name="terminoJornada" id="terminoJornada" aria-describedby="terminoJornada" placeholder="17:00">
                    </div>
                    <div class="col">
                        <label for="jornada">Valor/Hora</label>
                        <input type="text" id="valorHora"  autocomplete="off" name="valorHora" class="valorHora text-right form-control" inputmode="numeric" value="">
                        <script>
                            $('#valorHora').mask('#.##0,00', {reverse: true});
                        </script>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="descricao">Informações Complementares:</label>
                <textarea class="form-control" name="descricao" id="descricao" cols="58" rows="5"></textarea>
            </div>
            <div class="form-group ">
                <button type="submit" id="btn-entrar" class="btn btn-success col-12">Cadastrar</button>
            </div>
          </form>
        </main>

    
        <%- include('../partials/jsBootstrap.ejs') %>
        

  
    </body>
    </html>