<%- include('../partials/head.ejs') %>
<script src="/javascripts/jquery-3.2.0.min.js"></script>
<script src="/javascripts/jquery.mask.min.js"></script>
<body>
    <header>
        <nav class="navbar sticky-top navbar-light bg-light">
            <a class="navbar-brand" href="#">Trabalho Intermitente</a>
            <a class="navbar-brand" href="/empresa"><i class="fa fa-undo"></i></a>  
        </nav>
    </header>
    <main class='container mt-5 col-lg-6'>
        <div class='row '>
            <div class='ml-3 col-sm-12'>
                <h2>Cadastro Evento</h2>
                <% if( typeof msg !== 'undefined'){ %>
                    <div class='col-sm-12 p-1 bg-danger text-light text-center' id='mensagem' ><%= msg %></div>
                <% } %>
            </div>

        </div>
        <form class='col-sm-12' action="/cadastro/evento" method="POST">
            <div class="form-group col-sm-12">
                <input type="text" name="idLogado" id="idLogado" value="<%= idLogado %>" hidden>
            </div> 
            <div class="form-group">
                <div class='col-sm-12 text-danger text-left pl-0' >Campos com * são de preenchimento obrigatório</div>
            </div> 
            <div class="form-group">
                <div class="row mb-3 d-flex flex-wrap">
                    <div class="col-sm-7">
                        <label for="nome">* Nome:</label>
                        <input type="nome" class="form-control" name="nome" id="nome" aria-describedby="nome" placeholder="" required>
                    </div>
                    <div class="col">
                        <label for="qtdeProfissionais">* Qtde de Profissionais:</label>
                        <input type="number" class="form-control" name="qtdeProfissionais" id="qtdeProfissionais" aria-describedby="qtdeProfissionais" placeholder="" required>
                    </div>
            </div>
            <div class="form-group">
                <label for="cep">* CEP:</label>
                <div class="row">
                    <div class="col-sm-12 col-md-6 col-lg-6">
                        <input type="text" class="mb-2 form-control" name="cep" id="cep" aria-describedby="cep" placeholder="00000000" required>
                    </div>
                    <div class="col">
                        <input type="button" class="form-control btn btn-info  btnPesquisar" id="btnPesquisar" value="Pesquisar Endereço">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="endereco">* Endereço:</label>
                <input type="text" class="form-control" name="endereco" id="endereco" aria-describedby="endereco" placeholder="" required>
            </div>
            <div class="form-group">
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <label for="numero">* Número</label>
                        <input type="text" class="form-control" name="numero" id="numero" aria-describedby="numero" placeholder="" required>
                    </div>
                    <div class="col">
                        <label for="complemento">Complemento:</label>
                        <input type="text" class="form-control" name="complemento" id="complemento" aria-describedby="complemento" placeholder="">
                    </div>
            </div>
            <div class="form-group">
                <label for="bairro">* Bairro:</label>
                <input type="text" class="form-control" name="bairro" id="bairro" aria-describedby="bairro" placeholder="" required>
            </div>
            <div class="form-group">
                <label for="cidade">* Cidade:</label>
                <input type="text" class="form-control" name="cidade" id="cidade" aria-describedby="cidade" placeholder="" required>
            </div>
            <div class="form-group">
                <label for="estado">* Estado:</label>
                <input type="text" class="form-control" name="estado" id="estado" aria-describedby="estado" placeholder="" required>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col">
                        <label for="jornada">Início Jornada</label>
                        <input type="date" class="form-control" name="data" id="date" aria-describedby="date" required>
                    </div>
                    <div class="col">
                        <label for="jornada">Início Jornada</label>
                        <input type="time" class="form-control" name="inicioJornada" id="inicioJornada" aria-describedby="inicioJornada" value="08:00" required>
                    </div>
                    <div class="col">
                        <label for="jornada">Término Jornada</label>
                        <input type="time" class="form-control" name="terminoJornada" id="terminoJornada" aria-describedby="terminoJornada" value="17:00" required>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="descricao">Informações Complementares:</label>
                <textarea class="form-control" name="descricao" id="descricao" cols="58" rows="5"></textarea>
            </div>
            <div class="form-group ">
                <button type="submit" id="btn-entrar" class="btn btn-success col-12">Cadastrar</button>
            </div>
          </form>
        </main>

    
        <%- include('../partials/jsBootstrap.ejs') %>
        
        <script src="/javascripts/validadorCep.js"></script>
        <script src="/javascripts/validaDataEvento.js"></script>
  
    </body>
    </html>